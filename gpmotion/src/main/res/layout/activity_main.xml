<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tools.hackandroid.MainActivity">

    <LinearLayout
        android:id="@+id/ll_mainactivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_open_accessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openAccessibilityService"
            android:text="开启Google注册流程"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tv_show_accessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_print_def_sys_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onPrintDefSysInfoBtnClick"
            android:text="查看当前设备信息"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_modify_def_sys_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onModifyDefSysInfoBtnClick"
            android:text="修改系统设备信息"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_clear_sdcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClearSdCardBtnClick"
            android:text="清理sd卡信息"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_clear_google_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onGoogleCleanInfo"
            android:text="清理Google信息"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_open_gp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onOpenGp"
            android:text="打开googleplay"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_show_sysInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/ed_phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机编号"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/country_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="国内IP"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/proxy_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户代理IP"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>
